<%# render 'items/catalogue' %>

<p id="notice"><%= notice %></p>

<h1>Self Care Catalogue</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <!-- <th>Image</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td class="items"><%= item.title %></td>
        <td><%= item.description %></td>
        <td class="items"><%= item.category %></td>
        <td><%= image_tag ("body-icon.png") %></td>
        <td><%#= item.image %></td>        
        
        <td><%= link_to 'Show', item, class: 'btn btn-default' %></td>
        
        <%# if @item.user == current_user %>
        <td><%= link_to 'Edit', edit_item_path(item), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
      </tr>

      <%# end %>
    <% end %>
  </tbody>
</table>      

<%= link_to 'New Item', new_item_path, class: 'btn btn-default' %>